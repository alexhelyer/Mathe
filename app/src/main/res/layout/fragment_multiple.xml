<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4F6F6"
    tools:context="com.alex.helyer.mathe.MultipleFragment">

    <!-- TODO: Update blank fragment layout -->
    <!-- https://github.com/javiersantos/MaterialStyledDialogs -->
    <ImageView
        android:id="@+id/tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/info"/>
    <TextView
        android:id="@+id/txtMultiple"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:gravity="center"
        android:textSize="22dp"
        android:text="Fragment Multiple" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="5dp"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnOpc1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:background="@drawable/my_button"
            android:text="opc1" />

        <Button
            android:id="@+id/btnOpc2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:background="@drawable/my_button"
            android:text="opc2"/>

        <Button
            android:id="@+id/btnOpc3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:background="@drawable/my_button"
            android:text="opc3"/>

        <Button
            android:id="@+id/btnOpc4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:background="@drawable/my_button"
            android:text="opc4"/>

    </LinearLayout>



</LinearLayout>
